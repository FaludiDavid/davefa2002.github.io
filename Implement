document.addEventListener('DOMContentLoaded', function() {
  // Language switching functionality
  const langButtons = document.querySelectorAll('.lang-btn');
  const huElements = document.querySelectorAll('[data-lang-hu]');
  const roElements = document.querySelectorAll('[data-lang-ro]');
  
  function setLanguage(lang) {
    // Update active button
    langButtons.forEach(btn => {
      btn.classList.toggle('active', btn.getAttribute('data-lang') === lang);
    });
    
    // Show/hide content based on language
    if (lang === 'hu') {
      huElements.forEach(el => el.style.display = 'block');
      roElements.forEach(el => el.style.display = 'none');
    } else if (lang === 'ro') {
      huElements.forEach(el => el.style.display = 'none');
      roElements.forEach(el => el.style.display = 'block');
    }
  }
  
  // Add event listeners to language buttons
  langButtons.forEach(btn => {
    btn.addEventListener('click', function() {
      setLanguage(this.getAttribute('data-lang'));
    });
  });
  
  // Mobile menu functionality
  const mobileToggle = document.getElementById('mobile-toggle');
  const navMenus = document.querySelectorAll('.nav-menu');
  
  mobileToggle.addEventListener('click', function() {
    const activeLang = document.querySelector('.lang-btn.active').getAttribute('data-lang');
    const activeMenu = document.querySelector(`.nav-menu[data-lang-${activeLang}]`);
    activeMenu.classList.toggle('active');
  });
  
  // Close mobile menu when clicking on a link
  const navLinks = document.querySelectorAll('.nav-link');
  navLinks.forEach(link => {
    link.addEventListener('click', function() {
      navMenus.forEach(menu => menu.classList.remove('active'));
    });
  });
  
  // Smooth scrolling for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function(e) {
      e.preventDefault();
