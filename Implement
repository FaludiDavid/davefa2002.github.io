<style>
  /* Language Switcher Styles */
  .language-switcher {
    position: absolute;
    top: 50%;
    right: 80px;
    transform: translateY(-50%);
    display: flex;
    gap: 5px;
  }
  
  .lang-btn {
    background-color: transparent;
    color: var(--dark);
    border: 1px solid var(--light-gray);
    border-radius: 4px;
    padding: 5px 10px;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .lang-btn.active {
    background-color: var(--secondary);
    color: var(--white);
    border-color: var(--secondary);
  }
  
  .lang-btn:hover:not(.active) {
    background-color: var(--light-gray);
  }
  
  /* Responsive Language Switcher */
  @media (max-width: 768px) {
    .language-switcher {
      right: 60px;
    }
  }
  
  @media (max-width: 576px) {
    .language-switcher {
      position: static;
      transform: none;
      justify-content: center;
      margin-top: 10px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Language switcher functionality
    const langButtons = document.querySelectorAll('.lang-btn');
    const huElements = document.querySelectorAll('[data-lang-hu]');
    const roElements = document.querySelectorAll('[data-lang-ro]');
    
    function setLanguage(lang) {
      // Update active button
      langButtons.forEach(btn => {
        btn.classList.toggle('active', btn.getAttribute('data-lang') === lang);
      });
      
      // Show/hide content based on language
      if (lang === 'hu') {
        huElements.forEach(el => el.style.display = 'block');
        roElements.forEach(el => el.style.display = 'none');
      } else if (lang === 'ro') {
        huElements.forEach(el => el.style.display = 'none');
        roElements.forEach(el => el.style.display = 'block');
      }
    }
    
    // Add event listeners to language buttons
    langButtons.forEach(btn => {
      btn.addEventListener('click', function() {
        setLanguage(this.getAttribute('data-lang'));
      });
    });
    
    // Set default language
    setLanguage('hu');
  });
</script>

